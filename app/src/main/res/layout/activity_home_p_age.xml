<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".HomePAge">

    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="96dp"
        android:layout_height="117dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:contentDescription="Logo"
        android:src="@mipmap/ic_logo" />
    <TextView
        android:id="@+id/user"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeLogo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="@string/welcome"
        android:textSize="24sp" />

    <Button
        android:id="@+id/balancebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="130dp"
        android:text="View Accounts Balance"
        android:textColor="@color/colorPrimary"
        tools:text="View Accounts Balance" />

    <Button
        android:id="@+id/transferbtn"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/balancebtn"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="130dp"
        android:text="Transfer Between Accounts"
        android:textColor="@color/colorPrimary"
        tools:text="Transfer Between Accounts" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/transferbtn"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="130dp"
        android:text="Logout"
        android:textColor="@color/colorPrimary"
        tools:text="Logout" />
</RelativeLayout>